<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<% if current_user.has_role? :admin %>
  <h1>Listing All Orders for Admin <%= current_user.firstname %></h1>
<% else %>
  <h1>Orders for Waiter <%= current_user.firstname %></h1>
<% end %>


<table>
  <thead>
    <tr>
      <th>Customer Name</th>
      <th>Table</th>
      <th>Notes</th>
      <th>Taken by Waiter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% if @orders %>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.table %></td>
        <td><%= order.notes %></td>
        <% if order.user %>
         <td><%= order.user.firstname+" "+order.user.lastname %></td>
         <% else %>
         <td>N/A</td>
        <% end %>
        <td><%= link_to 'Show', order %></td>
        <% if can? :manage, order %>
           <td><%= link_to 'Edit', edit_order_path(order) %></td>
          
          <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
 <h3>Absolutely no orders to show</h3>
<% end %>

<br>

