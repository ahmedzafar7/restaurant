<h2>Customer Order Cart</h2>
<table>
	<%= render @cart.line_items %>

	<tr class="total_line">
		<td colspan="2">Total</td>
		<td class="total_cell"><%= number_to_currency(@cart.total_price) %></td>
	</tr>
</table>
<%= button_to "Finalize Order", new_order_path, method: :get %>
<%= button_to 'Empty Customer Order', @cart, method: :delete, data: { confirm: 'Are you sure?' } %>