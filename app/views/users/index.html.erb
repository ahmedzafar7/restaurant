<% if notice %>
    <p id="notice"><%= notice %></p>
<% end %>

<h1>Listing Waiters at Happy Days Restaurant</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.firstname+" "+user.lastname %></td>
        <td><%= link_to 'Show', user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

