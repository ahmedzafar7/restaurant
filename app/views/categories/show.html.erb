<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<p>
  <strong>Name:</strong>
  <%= @category.name %>
</p>

<h2>Foods in <%= @category.name %></h2>

<% unless @category.foods.empty? %>

<table> 
    <% @category.foods.each do |food| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td>
          <%= image_tag(food.image_url, class: 'list_image') %>
        </td>
        <td class="list_description">
        <dl>
        <dt><%= food.title %></dt>
        <strong><dt>in <%= link_to food.category.name, food.category %></dt></strong>
        <dd><%= truncate(strip_tags(food.description), length: 80) %></dd>
         <dt><%= food.price %></dt>
        </td>      
       
      </tr>
    <% end %>
</table>
<% else %>
<h2>No foods to show</h2>
<% end %>
<br/>
<%= link_to 'Edit', edit_category_path(@category) %> |
<%= link_to 'Back', categories_path %>
